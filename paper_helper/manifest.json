{
  "name": "Paper Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": ["tabs", "storage", "unlimitedStorage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
